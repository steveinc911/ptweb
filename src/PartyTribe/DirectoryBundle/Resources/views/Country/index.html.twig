{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Country list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Countryid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('country_show', { 'id': entity.countryId }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.countryId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('country_show', { 'id': entity.countryId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('country_edit', { 'id': entity.countryId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('country_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
